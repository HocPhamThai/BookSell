@model RoleManagementVM

<div class="card shadow border-0 mt-4">
    <div class="row card-header py-3 bg-secondary bg-gradient mx-0">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Role Management</h2>
        </div>
    </div>
    <div class="card-body bg-white p-4">
        <form method="post" class="row">
            <input hidden asp-for="ApplicationUser.Id" />
            <div class="border p-3">
                <div class="form-floating col-12 py-2">
                    <input asp-for="ApplicationUser.UserName" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.UserName" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating col-12 py-2">
                    <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-select border-0 shadow"></select>
                    <label asp-for="RoleId" class="ms-2">RoleName</label>
                    <span asp-validation-for="ApplicationUser.Role" class="text-danger"></span>
                </div>
                <div class="form-floating col-12 py-2">
                    <select asp-for="ApplicationUser.CompanyID" asp-items="@Model.CompanyList" class="form-select border-0 shadow"></select>
                    <span asp-validation-for="ApplicationUser.CompanyID" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update Role</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script> 
        $(function(){ 
            function toggleCompanyDropdown() {
                const selectedRole = $("#RoleId option:selected").text();
                if (selectedRole == "Company") { 
                    $("#ApplicationUser_CompanyID").show(); 
                } else { 
                    $("#ApplicationUser_CompanyID").hide(); 
                } 
            } 
            toggleCompanyDropdown();
            $("#RoleId").change(toggleCompanyDropdown);
        }); 
    </script> 
}